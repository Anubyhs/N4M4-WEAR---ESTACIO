<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:deviceIds="wear">

    <!-- Imagem de João Pessoa como papel de parede -->
    <ImageView
        android:id="@+id/imageViewBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/joao_pessoa"
        android:scaleType="centerCrop"
        android:contentDescription="Papel de parede João Pessoa" />

    <!-- Overlay escuro para melhorar legibilidade do texto -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="João Pessoa"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paraíba, Brasil"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="4dp"
                android:gravity="center" />

            <Button
                android:id="@+id/buttonExplorar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Explorar"
                android:layout_marginTop="16dp"
                android:backgroundTint="#4CAF50" />

            <Button
                android:id="@+id/buttonAudio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reproduzir Áudio"
                android:layout_marginTop="8dp"
                android:backgroundTint="#2196F3" />

            <Button
                android:id="@+id/buttonBluetooth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Conectar Bluetooth"
                android:layout_marginTop="8dp"
                android:backgroundTint="#FF9800" />

            <TextView
                android:id="@+id/textViewAudioStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:padding="8dp" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>

